{% extends 'base.html.twig' %}

{% block title %}Service |{{ parent() }}{% endblock %}

{% block body %}
<article id="services">
    <h1 class="titles m-2 text-center">Services</h1>
    {% for service in services %}
    <section id="carrossorie">
        <div class="container">
            <h2 class="titles text-start">{{ service.title }}</h2>
            <div class="row">
                <div class="col-lg-6">
                    <img class="img-fluid m-2 rounded" src="{{ asset('service/' ~ service.image) }}" alt="{{ service.title }}" />
                </div>
                <div class="col-lg-6">
                    <p class="m-2">{{ service.content }}</p>
                    <div class="d-flex">
                        <div class="ms-auto p-2">
                            <button class="btn btn-info" type="submit">Je prends RDV</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    {% endfor %}
</article>
{% endblock %}
